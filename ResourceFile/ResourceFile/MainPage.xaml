<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ResourceFile.MainPage"
             BackgroundColor="Orange">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
         <Label x:Name="Hello" Text="Hello World!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
             <Picker x:Name="picker" TextColor="Black">
                   <Picker.Items>
                        <x:String>English</x:String>
                        <x:String>Spanish</x:String>
                        <x:String>French</x:String>
                      </Picker.Items>
                </Picker>
        <Button x:Name="ChangeLanguage" Text="Click Here" BackgroundColor="White" Padding="24" Clicked="ChangeLanguage_Clicked"/>
        
    </StackLayout>

</ContentPage>

